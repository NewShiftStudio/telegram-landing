{
  "semi": true,
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "importOrder": [
    "^(react|next)",
    "<THIRD_PARTY_MODULES>",
    "^(store|http)",
    "^layouts",
    "^components/(.*)$",
    "^types",
    "^(hooks|helpers|packages|utils|constants|errors)",
    "^themes",

    "^(\\.?\\.\\/)+\\w+\\.(?!(s?css|module\\.s?css|styles))",
    "^(.?./)+",
    "^assets"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
